# ============================================================
# Polymarket Trading Bot - Environment Configuration
# Copy this file to .env and fill in your values
# ============================================================

# -------------------------------------------------------
# TRADING MODE
# Set PAPER_TRADING=true to simulate without real orders
# NEVER set to false without fully testing paper mode first
# -------------------------------------------------------
PAPER_TRADING=true

# -------------------------------------------------------
# STRATEGY PARAMETERS
# -------------------------------------------------------
BUY_PROB_THRESHOLD=0.03       # Enter if price <= 3%
SELL_PROB_TARGET=0.06         # Exit when price reaches 6%
FORCED_EXIT_SECONDS=25        # Sell 25 seconds before market closes
MAX_POSITION_USD=10.0         # Max dollars per position
MAX_CONCURRENT_POSITIONS=3    # Max simultaneous positions
SLIPPAGE_TOLERANCE=0.005      # 0.5% slippage allowance

# -------------------------------------------------------
# MARKET FILTERS
# -------------------------------------------------------
MARKET_KEYWORD=BTC            # Only trade markets containing this keyword
MIN_MARKET_DURATION_MIN=3     # Minimum minutes remaining
MAX_MARKET_DURATION_MIN=10    # Maximum minutes remaining

# -------------------------------------------------------
# SAFETY THRESHOLDS
# -------------------------------------------------------
SAFETY_LIQUIDITY=50           # Exit if bid liquidity drops below $50
MAX_SPREAD_PCT=0.015          # Exit if spread exceeds 1.5%
MIN_BOOK_IMBALANCE=0.2        # Minimum bid/(bid+ask) ratio

# -------------------------------------------------------
# POLYMARKET API CREDENTIALS
# Required for live trading only
# Generate at: https://polymarket.com (connect wallet)
# -------------------------------------------------------
PRIVATE_KEY=                  # Your EVM private key (0x...)
POLYMARKET_API_KEY=           # L2 API key
POLYMARKET_API_SECRET=        # L2 API secret
POLYMARKET_API_PASSPHRASE=    # L2 API passphrase

# -------------------------------------------------------
# NETWORK
# -------------------------------------------------------
CHAIN_ID=137                  # Polygon mainnet
RPC_URL=https://polygon-rpc.com
CLOB_API_URL=https://clob.polymarket.com
GAMMA_API_URL=https://gamma-api.polymarket.com
WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/

# -------------------------------------------------------
# ORDER SETTINGS
# -------------------------------------------------------
ORDER_RETRY_ATTEMPTS=3
ORDER_RETRY_DELAY_MS=200
TAKER_FEE=0.0

# -------------------------------------------------------
# TELEGRAM BOT
# Create bot: https://t.me/BotFather -> /newbot
# Get your chat ID: https://t.me/userinfobot
# -------------------------------------------------------
TELEGRAM_BOT_TOKEN=           # 1234567890:ABCdef...
TELEGRAM_ALLOWED_CHAT_IDS=    # Comma-separated: 123456789,987654321

# -------------------------------------------------------
# LOGGING
# -------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# -------------------------------------------------------
# WEBSOCKET
# -------------------------------------------------------
WS_RECONNECT_DELAY=3
WS_HEARTBEAT_INTERVAL=30
